// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "terminal": {
    "dock": "bottom"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 12,
  "ui_font_family": "ComicShannsMono Nerd Font",
  "buffer_font_size": 16.0,
  "buffer_font_family": "ComicShannsMono Nerd Font",
  "theme": {
    "mode": "system",
    "light": "Nightfox",
    "dark": "Nightfox"
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#09090b70",
    "status_bar.background": "#09090b80",
    "title_bar.background": "#09090b80",
    "panel.background": "#00000000",
    "editor.background": "#00000000",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000020",
    "tab.inactive_background": "#00000000",
    "tab.active_background": "#3f3f4650",
    "border": "#00000022",
    "border.variant": "#00000000",
    "scrollbar.track.background": "#0000000d",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#00000020",
    "scrollbar.thumb.border": "#00000000",
    "elevated_surface.background": "#000000f0",
    "surface.background": "#00000000",
    "editor.active_line_number": "#f9dd7cc",
    "editor.gutter.background": "#00000000",
    "editor.indent_guide": "#ffffff1a",
    "editor.indent_guide_active": "#ffffff33",
    "editor.line_number": "#ffffff80",
    "editor.active_line.background": "#00000010"
  }
}
